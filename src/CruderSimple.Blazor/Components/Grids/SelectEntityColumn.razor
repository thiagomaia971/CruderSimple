@typeparam TItem
@typeparam TEntity
@typeparam TDto

<DataGridSelectColumn @ref="DataGridSelectColumn" 
                      TItem="TItem"
                      Field="@Field"
                      Caption="@Caption"
                      Editable
                      Filterable
                      Sortable
                      Attributes="@Attributes"
                      ValueField="(x) => ((TDto)x).GetKey" 
                      TextField="(x) => ((TDto)x).GetValue">
    <DisplayTemplate>
        @DisplayTemplate(context)
    </DisplayTemplate>
</DataGridSelectColumn>