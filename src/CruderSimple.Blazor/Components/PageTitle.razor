@using static CruderSimple.Blazor.Components.BreadcrumbList
<Row>
    <Column ColumnSize="ColumnSize.Is12">
        <Div Class="page-title-wrapper">
            <Div Float="Float.End">
                @if ( BreadcrumbItems != null )
                {
                    <BreadcrumbList Items="@BreadcrumbItems" />
                }
                else if ( ChildContent != null )
                {
                    @ChildContent
                }
            </Div>
            <Heading Size="HeadingSize.Is4" Class="page-title" Margin="Margin.Is0">
                @Title
            </Heading>
        </Div>
    </Column>
</Row>
@code{
    [Parameter] public string Title { get; set; }

    [Parameter] public Breadcrum[] BreadcrumbItems { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    public List<Breadcrum> MyBreadcrumb = new List<Breadcrum>();

    [Inject]
    public NavigationManager NavigationManager { get; set; }

    protected override async Task OnInitializedAsync()
    {
        MyBreadcrumb.AddRange(BreadcrumbItems.ToList());
        MyBreadcrumb.Add(new Breadcrum(NavigationManager.ToBaseRelativePath(NavigationManager.Uri), Title));
        BreadcrumbItems = MyBreadcrumb.ToArray();
    }
}