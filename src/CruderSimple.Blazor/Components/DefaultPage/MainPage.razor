<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <SideMenu />
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed="true">
            <TopMenu />
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnAll">
            <Row>
                <Column ColumnSize="ColumnSize.Is12">
                    <Card Margin="@ThemeStyles.CardMargin" Shadow="@ThemeStyles.CardShadow" Style="min-height: 400px">
                        <LoadingIndicator>
                            @ChildContent
                        </LoadingIndicator>
                    </Card>
                </Column>
            </Row>
        </LayoutContent>
    </Layout>
</Layout>
@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
